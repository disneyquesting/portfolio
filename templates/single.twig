{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<section class="article-content">
				{% block headline %}
					<h1 class="article-h1"><a href="{{ post.link }}">{{ post.title }}</a></h1>
					<h2 class="article-h2">{{ post.subtitle }}</h2>
				{% endblock %}
				{% block metadetails %}
					<p class="blog-author">
						<span>By</span> {{ post.author_name }} <span>&bull;</span> {{ post.post_date | date }}
					</p>
				{% endblock %}
				{% block customcontent %}
					{{ post.content }}
				{% endblock %}
			</section>
		</article>
	</div>

{% endblock %}