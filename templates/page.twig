{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{% block headline %}
					<h1 class="article-h1">{{post.title}}</h1>
					<i>OKAY</i>
				{% endblock %}
				<div class="article-body">
					<h2>Hello. I am Thomas Lane.</h2>
					<p><a href="mailto:{{email }}">E-mail me!</a></p>
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}